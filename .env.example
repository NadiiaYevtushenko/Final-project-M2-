# 🌐 General
PORT=5000
NODE_ENV=development

# 🔐 JWT
# JWT secret used to sign authentication tokens
JWT_SECRET=your_jwt_secret_here

# ✉ Email (used for contact form via Nodemailer)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_app_password_here

# 🛢 MongoDB (e.g. MongoDB Atlas connection string)
MONGO_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/<db_name>?retryWrites=true&w=majority

# 🔑 Session
# Secret for express-session (used with Passport.js)
SESSION_SECRET=your_session_secret_here
